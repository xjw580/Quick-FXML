<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xjw580.quickfxml</id>
    <name>Quick-Fxml</name>
    <vendor>xjw580</vendor>

    <description><![CDATA[
          Quick FXML 插件
          适用于JavaFX项目
          特性:
       <ul>
          <li>在编写fxml文件中，将会获取fxml文件中的fx:id属性然后在对应的controller中插入对应的成员变量</li>
      </ul>
      ]]>
    </description>

    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
<!--        <dom.fileMetaData rootTagName="root" implementation="com.github.xjw580.quickfxml.description.XMLDescription"/>-->
<!--        <codeInsight.lineMarkerProvider id="ControllerLineMarker" language="XML"-->
<!--                                        implementationClass="com.github.xjw580.quickfxml.marker.ControllerLineMarker"/>-->
        <localInspection
                language="XML"
                groupPath="Xml"
                groupKey="inspection.quickfxml.group.name"
                groupBundle="messages.MyBundle"
                shortName="xml"
                enabledByDefault="true"
                implementationClass="com.github.xjw580.quickfxml.inspection.FxmlInspection"
                key="inspection.quickfxml.display.name"
                bundle="messages.MyBundle"/>
    </extensions>

