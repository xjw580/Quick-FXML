<!--                language="XML"-->
<!--                groupPath="Xml"-->
<!--                groupKey="inspection.quickfxml.group.name"-->
<!--                groupBundle="messages.MyBundle"-->
<!--                shortName="xml"-->
<!--                enabledByDefault="true"-->
<!--                implementationClass="com.github.xjw580.quickfxml.inspection.FxmlInspection"-->
<!--                key="inspection.quickfxml.display.name"-->
<!--                bundle="messages.MyBundle"/>-->
    </extensions>

    <actions>
        <action
                id="GeneratedXMLCode"
                class="com.github.xjw580.quickfxml.action.GeneratedXMLCode"
                text="GenerateGroup"
                description="SDK action example">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
